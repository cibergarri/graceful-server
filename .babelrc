{
  "presets": [
    [
      "@babel/env",
      {
        "targets": {
          "node": "8"
        },
        "modules": false
      }
    ],
    "@babel/typescript"
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "~": "./src",
          "test": "./tests"
        }
      }
    ]
  ]
}
